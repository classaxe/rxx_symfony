{% extends 'main.html.twig' %}

{% block body %}
<div class="main">
<h1>{{ mode }}</h1>
{% include 'listeners/latest.html.twig' %}
{% include 'listeners/addlogfor.html.twig' %}
{% if not isAdmin %}{{ text|raw }}{% endif %}
{% set form_title='Customise ' ~ system|upper ~ ' Listeners List' %}
{% set form_class='listener_list' %}
<div class="row">
    <div class="small-12 medium-8 columns">
        {% include 'forms/form.html.twig' %}
    </div>
    <div class="small-12 medium-4 columns">
        {% include 'listeners/maps.html.twig' %}
    </div>
</div>
{% include 'grids/listeners.html.twig' %}

<script>
    $(document).ready( function() {
        setFormTypesStyles();
        setFormTypesDefault();
        setFormTypesAllAction();
        setFormCountryAction();
        setFormRegionAction();
        setColumnSortActions();
        setColumnSortedClass();
        setExternalLinks();
        $('#form_filter_help').html('{{ matched }}');
    });
</script>
    <p class="text-center">
        <input type="button" class="button small" value="Print..." onclick="window.print()" style="width: 120px;">
{% if isAdmin %}
        <input type="button" class="button small" value="Add Listener..." onclick="window.open('{{ path('listener', {'system' : system})}}','new','{{ listenerPopup }}')" style="width: 120px;">
{% endif %}
    </p>
</div>
{% endblock %}
