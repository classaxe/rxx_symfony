<h2>{{ system|upper }} {% trans %}Listeners List{% endtrans %}</h2>
{% if listeners|length > 0 %}
<table id="wide" class="listener results">
    <thead>
        <tr>
{% for key, column in columns %}
{% if ((not column.admin or isAdmin) and (not column.arg or (column.arg and column.arg in args.type))) %}
            <th{%
                if key and column.order
            %} id="{{ key }}|{{ column.order }}"{%
                endif
            %}{%
                if column.th_class or column.sort
            %} class="{{ column.th_class }}{%
                    if column.sort
                %} sort{%
                    endif
            %}"{%
                endif
            %}{%
                if column.tooltip
            %} title="{{ column.tooltip | trans }}"{%
                endif
            %}>{% if 'txt_vertical' in column.th_class %}<div>{{ column.label | trans | raw }}</div>{% else %}{{ column.label | trans | raw }}{% endif %}</th>
{% endif %}
{% endfor %}
        </tr>
    </thead>
    <tbody>
{% for listener in listeners %}
        <tr>
{% for key, column in columns %}
{% if ((not column.admin or isAdmin) and (not column.arg or (column.arg and column.arg in args.type))) %}
    {% set value = attribute(listener, column.field) %}
    {% if (column.highlight and args[column.highlight] is defined and args[column.highlight] is not empty) %}
        {% for repl in args[column.highlight] | split(' ') %}
            {% set value = value | ireplace({ (repl) : '<em>' ~ repl|upper ~ '</em>' }) %}
        {% endfor %}
    {% endif %}
            <td{%
                if key == 'name'
                    %} title="{{ listener.primaryQth ? 'Primary Location' | trans : 'Secondary Location' | trans }}" class="{{ listener.primaryQth ? 'primaryQth' : 'secondaryQth' }} {{ column.td_class }}"{%
                elseif column.td_class
                    %} class="{{ column.td_class }}"{%
                endif
            %}>{%
                if key == 'name'
                    %}<a href="{{ url('listener', { 'system' : system, 'id' : listener.ID }) }}" data-popup="1">{{ value|raw }}</a>{%
                elseif key == 'addlog'
                    %}{% if isAdmin %}<a href="#" onclick="alert('soon'); return false;">{% trans %}Add...{% endtrans %}</a>{% endif %}{%
                elseif key == 'callsign'
                    %}{% if listener.callsign %}<a href="https://hamcall.net/call?callsign={{ listener.callsign }}" rel="external">{{ value|raw }}</a>{% endif %}{%
                elseif key == 'countLogs'
                    %}{% if listener.countLogs %}<a href="{{ url('listener_logs', { 'system' : system, 'id' : listener.ID }) }}" data-popup="1">{{ value }}</a>{% endif %}{%
                elseif key == 'countSignals'
                    %}{% if listener.countSignals %}<a href="{{ url('listener_signals', { 'system' : system, 'id' : listener.ID }) }}" data-popup="1">{{ value }}</a>{% endif %}{%
                elseif key == 'gsq'
                    %}{% if listener.gsq %}<a href="{{ url('listener_map', { 'system' : system, 'id' : listener.ID }) }}" data-popup="1">{{ value }}</a>{% endif %}{%
                elseif key == 'map'
                    %}{% if listener.signalsMap %}<a href="{{ url('listener_signalsmap', { 'system' : system, 'id' : listener.ID }) }}" data-popup="1">{% trans %}Map{% endtrans %}</a>{% endif %}{%
                elseif key == 'mapPos'
                    %}{% if listener.region in ['ca','eu','na'] or listener.itu == 'HWA'%}<a href="{{ url('listener_locatormap', { 'system' : system, 'id' : listener.ID }) }}" data-popup="1">{{ listener.formattedMapPos }}</a>{% endif %}{%
                elseif key == 'nwl'
                    %}{% if listener.ndbWebLog %}<a href="{{ url('listener_ndbweblog', { 'system' : system, 'id' : listener.ID }) }}" data-popup="1">{% trans %}NWL{% endtrans %}</a>{% endif %}{%
                elseif key == 'website'
                    %}{% if listener.website %}<a href="{{ listener.website }}" data-popup="www_{{ listener.id }}|width=640,height=480,status=1,scrollbars=1,resizable=1">{% trans %}Link...{% endtrans %}</a>{% endif %}{%
                elseif key == 'admin'
                    %}{% if isAdmin %}<a href="{{ url('listener_delete', { 'system' : system, 'id' : listener.ID }) }}" class="delete" onclick="return confirm(msg.del_listener);">X</a>{% endif %}{%
                else
                    %}{{ value|raw }}{%
                endif
            %}</td>
{% endif %}
{% endfor %}
        </tr>
{% endfor %}
    </tbody>
</table>
<div id="narrow"></div>
{% else %}
    <p class="no-results">{% trans %}(No listeners found matching your criteria){% endtrans %}</p>
{% endif %}