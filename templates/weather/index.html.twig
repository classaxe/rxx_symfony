{% extends 'main.html.twig' %}
{% block body %}
<div class="main">
    <h1>{{ mode | trans }}</h1>
    {% if widgets|length > 1 %}
        <div class="links quicklinks">[
            {% for key, m in widgets %}
                <a href="#{{ key }}">{{ m.shortName }}</a>{%  if not loop.last %} |{%  endif %}
            {% endfor %}
            ]</div>
    {% endif %}
    <div class="main">
        {% for key, m in widgets %}
            {% set mode = m.mode %}
            {% set showTopAndPopup = true %}
            <div class="help">
                {% include 'weather/inner.html.twig' %}
            </div>
        {% endfor %}
    </div>

</div>
<script>
    $(document).ready( function() {
        setExternalLinks();
    });
</script>
{% endblock %}