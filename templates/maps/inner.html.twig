<div class="header"{% if key is defined %} id="{{ key }}"{% endif %}>
    <h3>{{ mode | trans }}</h3>
    {%  if (stateBtn is defined or countryBtn is defined or multiple is defined or countryBtn is defined) %}
        <div class="links">[
        {% if showTopAndPopup is defined %}
            <a href="#top">{{ "Top" | trans }}</a>
            |
            <a href="{{ url('map', { '_locale' : _locale, 'system' : system, 'area' : key }) }}" data-popup="1">{{ 'Popup' | trans }}</a>
            {% if ((stateBtn is defined and stateBtn) or (countryBtn is defined and countryBtn)) %}|{% endif %}
        {% endif %}
        {% if (stateBtn is defined and stateBtn) %}
            <a href="{{ url('states', { '_locale' : _locale, 'system' : system, 'filter' : stateFilter }) }}" data-popup="1">{{ stateBtn | trans }}</a>
            {% if ((stateBtn is defined and stateBtn) and (countryBtn is defined and countryBtn)) %}|{% endif %}
        {% endif %}
        {% if (countryBtn is defined and countryBtn) %}
            <a href="{{ url('countries', { '_locale' : _locale, 'system' : system, 'filter' : countryFilter }) }}" data-popup="1">{{ countryBtn | trans }}</a>
        {% endif %}
        ]</div>
    {% endif %}
</div>
<div class="body">
    {% if text is defined %}{{ text|raw }}{% endif %}
    <img src="{{ asset('image/' ~ map) }}" alt="{{ mode }}" title="{{ mode }}" class="map" />
</div>
