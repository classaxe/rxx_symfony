{% set minified = (getEnv('APP_ENV') == 'dev' ? '' : '.min') %}
<!DOCTYPE html>
<html lang="{{ _locale }}">
<head>
<meta charset="UTF-8">
<title>{% block title %}{{ system|upper }} &gt; {{ mode|raw }}{% endblock %}</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<link rel="stylesheet prefetch" href="{{ asset('css/foundation.min.css') }}" />
<link rel="stylesheet prefetch" href="{{ asset('css/jquery-ui.min.css') }}" />
<link rel="stylesheet" href="{{ asset('css/style' ~ minified ~ '.css') }}?v={{ tag }}" />
{% block stylesheets %}{% endblock %}
<script>
var base_image = "{{ asset('image') }}";
var base_js = "{{ asset('js') }}";
var base_url = "{{ path('locale_system', { 'system' : system }) }}";
</script>
<script src="{{ asset('js/jquery-3.4.1.min.js') }}"></script>
<script src="{{ asset('js/jquery-ui.min.js') }}"></script>
<script src="{{ asset('js/functions' ~ minified ~ '.js') }}?v={{ tag }}"></script>
</head>

<body class="{{ system|lower }} locale-{{ _locale }}">
{% block body_head %}{% endblock %}
<main id="main">{% block body %}{% endblock %}</main>
{% block body_footer %}{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
