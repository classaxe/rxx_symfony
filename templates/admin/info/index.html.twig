{% block body %}
    <div class="main">
        <h1>{{ mode | trans }}</h1>
    </div>
    <div id='sysinfo'>
        <table border="0" cellpadding="3">
            <tr class='h'>
                <td colspan='2'><h1 class='p'>{{ 'RNA / REU / RWW SYSTEM' | trans }}</h1></td>
            </tr>
            <tr>
                <td class="e">{{ 'PHP Version' | trans }}</td>
