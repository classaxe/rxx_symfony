<footer>
    <div class="footer" id="footer">
        <p class="preamble">
            <strong>{{ 'Your %s Editors are:' | trans | format(system|upper) }}</strong>
        </p>
    {% set credits = ['editors', 'awards', 'authors'] %}
    {% for credit in credits %}

        <p>
    {% for person in systems[system][credit] %}
            <strong>
    {% if person.email %}
        <a href="#" data-contact="{{
            ('mailto:' ~ person.email ~ '?subject=' ~ system | upper ~ ' system') | obfuscateEmail
        }}">{{ person.name }}</a>
    {% else %}
            {{ person.name }}
    {% endif %}
            </strong> {{ person.role | trans }}{% if not loop.last  %}<br />

    {% endif %}
    {% endfor %}

        </p>
    {% endfor %}
        <p class="copyright"><strong>&copy;{{ "now"|date("Y") }} Martin Francis</strong></p>
    </div>
</footer>
<script>
    setEmailLinks();
</script>
