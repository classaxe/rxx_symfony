{% extends 'popup.html.twig' %}

{% block body %}
<div class="help">
    <h1>{{ system|upper }} {{ mode }}</h1>
    <p>States and provinces in this system are given by NDB List approved
        <a href="http://www.ndblist.info/beacons/countrylist.pdf" rel="external" title="NDBList country, state and province codes">standard codes</a>.
    </p>
    {% if countries|length > 1 %}
    <div class="links quicklinks">[
        {% for key, country in countries %}
        <a href="#{{ country.itu }}">{{ country.name }}</a>{%  if not loop.last %} | {%  endif %}
        {% endfor %}
    ]</div>
    {% endif %}

    {% for country in countries %}
    <div class="zone">
        <div class="header">
            <h2 id='{{ country.itu }}'>{{ country.name }}</h2>
            <div class="links">
                [ {%  if country.map %}<a href="{{ url('map', { 'system' : system, 'area' : country.map }) }}" rel="external">Map</a> | {% endif %}<a href="#top">Top</a> ]
            </div>
        </div>
        {% if country.states|length  %}
        <ol class="row small-up-1 medium-up-3 large-up-4 clearfix">
            {% for s in country.states %}
            <li class="column">{{ s.name }}<span class="abbr">{{ s.sp }}</span></li>
            {% endfor %}
        </ol>
        {% endif %}
    </div>
    {% endfor %}
</div>
<script>
$(document).ready( function() {
    setExternalLinks();
});
</script>
{% endblock %}
