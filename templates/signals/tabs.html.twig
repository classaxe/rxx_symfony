<div id="tabs" class="hide-for-print">
    {% for idx, tab in tabs %}
        <a class="button{%
                if (args['show'] == tab[0] or (idx == 0 and args['show'] == '')) %} is-active{% endif
        %}{%
                if (idx != 0 and (isAdmin and args.admin_mode != '')) %} disabled{% endif
        %}" id="show_{{ tab[0] }}"{%
                if (idx != 0 and (isAdmin and args.admin_mode != '')) %} onclick="return false"{% else %} onclick="changeShowMode('{{ tab[0] }}')"{% endif
        %}>{{ tab[1]|trans }}</a>
    {% endfor %}
</div>
