<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCmvsfY0bgnVB-gl_nMHGQ71rp1WTz9tGM&callback=SMap.init"></script>
<div class="row">
    <div class="small-6 text-left"><h2>{{ system|upper }} {% trans %}Signals Map{% endtrans %}</h2></div>
    <div class="small-6 text-right">{% if personalised %}<h3>{{ 'Personalised for %s%s%s'|trans|format(
            "<a href='" ~ url('listener', { 'system' : system, 'id' : args.personalise }) ~ "' data-popup='1'>",
            personalised,
            '</a>'
        )|raw }}</h3>{% endif %}</div>
</div>
<table class="map_layout">
    <tbody>
    <tr>
        <td width="35%">
            <div class="scroll">
                <div id="scrollablelist">
                    <table class="results" id="markerlist" style="display:none; margin: 0; max-width: 500px">
                        <thead>
                        <tr>
{% if personalised %}
                            <th  class="txt_vertical nosort"><div>{% trans %}Logged{% endtrans %}</div></th>
{% endif %}
                            <th>{% trans %}KHz{% endtrans %}</th>
                            <th>{% trans %}ID{% endtrans %}</th>
                            <th>{% trans %}'Name' and Location{% endtrans %}</th>
                            <th>{% trans %}S/P{% endtrans %}</th>
                            <th>{% trans %}ITU{% endtrans %}</th>
                        </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
            <p class="no-results">{% trans %}(No signals found matching your criteria){% endtrans %}</p>
        </td>
        <td>
            <div class="content map">
                <div>
                    <div id="header">
                        <div class="form_layers">
                            <div><label><strong>{% trans %}Show{% endtrans %}</strong></label></div>
                            <div><label title="{% trans %}Show Maidenhead Locator Grid Squares{% endtrans %}"><input type="checkbox" id="layer_grid" checked="checked" /> {% trans %}Grid{% endtrans %}</label></div>
                            <div><label title="{% trans %}Show Active Signals{% endtrans %}"><input type="checkbox" id="layer_active" checked="checked" /> {% trans %}Active{% endtrans %}</label></div>
                            <div><label title="{% trans %}Show Inactive Signals{% endtrans %}"><input type="checkbox" id="layer_inactive" checked="checked" /> {% trans %}Inactive{% endtrans %}</label></div>
                        </div>
                        <div class="form_layers">
                            <div><strong>{% trans %}Key:{% endtrans %}</strong></div>
                            <div title="{% trans %}A signal believed to be active at this time{% endtrans %}">
                                <img src="//maps.google.com/mapfiles/kml/paddle/wht-circle.png" alt="{% trans %}Active Signal Marker{% endtrans %}" style="height:0.8em; width: 0.8em"/>{% trans %}Active{% endtrans %}
                            </div>
                            <div title="{% trans %}May be seen when you choose 'Show Inactive'{% endtrans %}">
                                <img src="//maps.google.com/mapfiles/kml/paddle/wht-blank.png" alt="{% trans %}Inactive Signal Marker{% endtrans %}" style="height:0.8em; width: 0.8em; opacity: 0.8" />{% trans %}Inactive{% endtrans %}
                            </div>
                        </div>
                    </div>
                    <div id="map"></div>
                </div>
            </div>
        </td>
    </tr>
    </tbody>
</table>