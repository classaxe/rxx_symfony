{% endif %}
$(document).ready( function() {
    var mapDiv = $('#map');
    $(window)
        .resize(function() {
            mapDiv.height($(window).height() - 140);
            mapDiv.width($(window).width() - 410);
            $('#scrollablelist').height(mapDiv.height() + 40);
        })
        .trigger('resize');
    SIGNALS_FORM.init({{ results.total }});
    SIGNALS.loadMap();
});

